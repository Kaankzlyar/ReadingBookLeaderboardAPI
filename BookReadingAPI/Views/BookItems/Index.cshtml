<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

@model List<ReadingBookAPI.Models.BookItem>

<div class="container mt-4">
<h1>Lider Tablosu</h1>

<form method="post" action="@Url.Action("PostBookItem", "BookItems")">
    <div class="mb-3">
        <label for="exampleFormControlInput" class="form-label">Kullanıcı Adı:</label>
        <input class="form-control" type="text" placeholder="Kullanıcı adı giriniz" name="UserName" required />
        <br />
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1">Bugün okunan sayfa sayısı:</label>
        <input class="form-control" type="number" placeholder="Bugün okunan sayfa sayısı" name="TodayPageNumber" required />
        <br />
    </div>
    <div>
        <button type="submit" class="btn btn-success btn-lg">Ekle</button>
    </div>
</form>



    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Rank</th>
            <th scope="col">Ad</th>
            <th scope="col">Toplam Sayfa</th>
            <th scope="col">Bugünkü Sayfa</th>
            <th scope="col">Streak</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            @if (item.rank == 1){
            <tr class="table-warning">
                        <td>@item.rank</td>
                        <td>@item.UserName</td>
                        <td>@item.TotalPages</td>
                        <td>@item.TodayPageNumber</td>
                        <td>@item.StreakNumber</td>
                        <td>
                            <form method="post" action="@Url.Action("DeleteBookItem", "BookItems", new { id = item.Id })">
                                <input type="hidden" name="_method" value="DELETE" />
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
            </tr>
            
            }
            else{
            <tr>
                    <td>@item.rank</td>
                    <td>@item.UserName</td>
                    <td>@item.TotalPages</td>
                    <td>@item.TodayPageNumber</td>
                    <td>@item.StreakNumber</td>
                    <td>
                            <form method="post" action="@Url.Action("DeleteBookItem", "BookItems", new { id = item.Id })">
                                <input type="hidden" name="_method" value="DELETE" />
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                    </td>
            </tr>
        }
    }
    </tbody>
</table>
</div>